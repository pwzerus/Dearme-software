<h1>My Tags</h1>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>

<!-- CREATE TAG SECTION -->
<h2>Create Tag</h2>

<%= form_with model: @tag, url: tags_path, local: true do |f| %>
  <% if @tag.errors.any? %>
    <div>
      <h3><%= pluralize(@tag.errors.count, "error") %> prevented this tag from being saved:</h3>
      <ul>
        <% @tag.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "Tag name" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.submit "Create Tag" %>
  </div>
<% end %>

<hr>

<ul>
  <% @tags.each do |tag| %>
    <li>
      <strong><%= tag.title %></strong>

      <%= form_with model: tag, url: tag_path(tag), method: :patch, local: true do |f| %>
        <div>
          <%= f.label :title, "Rename" %>
          <%= f.text_field :title, value: tag.title %>
          <%= f.submit "Update" %>
        </div>
      <% end %>

      <%= button_to "Delete", tag_path(tag), method: :delete,
            data: { confirm: "Are you sure you want to delete this tag?" } %>
    </li>
  <% end %>
</ul>
